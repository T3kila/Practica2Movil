<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:background="#D4f4f0"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:id="@+id/logoufg"
            app:srcCompat="@drawable/ufglogocorporativvohorizontal">

        </ImageView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="104dp"
                android:layout_height="101dp"
                android:id="@+id/fotoperfil"
                app:srcCompat="@drawable/foto"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bioname"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="0dp"
            android:text="Diego Alfredo Molina Medina"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/biotext"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:gravity="start|top"
            android:inputType="text|textMultiLine"
            android:maxEms="15"
            android:maxLines="15"
            android:text="estudiante de ingenieria en desarrollo de softwarecomprometido con la calidad del codigo y su interpretacion para mejorar la rapides del sistema"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="239dp"
            android:layout_height="516dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ultimafoto"
            app:srcCompat="@drawable/androidbrazocruzado"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>